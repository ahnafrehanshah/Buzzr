<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/ssCircle2"
        android:layout_width="372dp"
        android:layout_height="367dp"
        android:layout_marginEnd="200dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toTopOf="@+id/ssTitleBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ss_circle1" />

    <ImageView
        android:id="@+id/ssCircle1"
        android:layout_width="213dp"
        android:layout_height="191dp"
        android:layout_marginStart="124dp"
        android:layout_marginBottom="200dp"
        app:layout_constraintBottom_toTopOf="@+id/ssPerson"
        app:layout_constraintStart_toStartOf="@+id/ssTitleBox"
        app:srcCompat="@drawable/ss_circle1" />

    <TextView
        android:id="@+id/ssTitleBox"
        android:layout_width="200sp"
        android:layout_height="72sp"
        android:background="@drawable/sslogobox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ssTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/montserratmedium"
        android:text="@string/ssTitleStr"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="@+id/ssTitleBox"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ssTitleBox" />

    <ImageView
        android:id="@+id/ssPerson"
        android:layout_width="319dp"
        android:layout_height="223dp"
        android:layout_marginEnd="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/trial" />

</androidx.constraintlayout.widget.ConstraintLayout>